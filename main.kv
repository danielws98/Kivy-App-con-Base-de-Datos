#:kivy 1.11.1
<MainWid>:
    canvas:
        Color:
            rgb:1,1,1
        Rectangle:
            pos:self.pos
            size:self.size

<StartWid>:
    orientation:'vertical'
    canvas:
        Color:
            rgb:0.3,0.3,0.9
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        size_hint_y:0.7
    Button:
        size_hint_y:0.1
        text:'Conectar a la base de datos'
        on_press:root.create_base()
    BoxLayout:
        size_hint_y:0.2

<DataWid>:
    data:''
    data_id:''
    canvas:
        Color:
            rgb:0.2,0.2,0.2
        Rectangle:
            size:self.size
            pos:self.pos
    Label:
        size_hint_x:0.9
        size_font:self.width*0.4
        text:root.data
    
    Button:
        text:'Editar'
        size_hint_x:0.1
        on_press:root.update_data(root.data_id)
<DataBaseWid>:
    canvas:
        Color:
            rgb:0.3,0.3,0.9
        Rectangle:
            pos:self.pos
            size:self.size

    ScrollView:
        size:self.size
        GridLayout:
            id:container
            padding:[10,10,10,10]
            spacing:5
            size_hint_y:None
            cols:1
            row_default_height:root.height*0.2
            height:self.minimum_height

<NewDataButton>:
    font_size:self.height*0.5
    text:'+'
    on_press:root.create_new_product()

<LeftLabel@Label>:
    text_size:self.size
    haling:'left'

<MessagePopup>:
    BoxLayout:
        orientation:'vertical'
        Label:
            id:message
            size_hint:1,0.8
        Button:
            size_hint:1,0.2
            text:'Regresar'
            on_press:root.dismiss()
<InsertDataWid>:
    orientation:'vertical'
    canvas:
        Color:
            rgb:0.3,0.3,0.9
        Rectangle:
            pos:self.pos
            size:self.size

    LeftLabel:#*********ID
        text:'ID'
    TextInput:
        id:ti_id
        multiline:False
        hint_text:'ID'
    
    LeftLabel:#*********NOMBRE
        text:'Nombre:'
    TextInput:
        id:ti_nombre
        multiline:False
        hint_text:'Nombre'
    
    LeftLabel:#**********MARCA
        text:'Marca:'
    TextInput:
        id:ti_marca
        multiline:False
        hint_text:'Marca'
    
    LeftLabel:#**********COSTO
        text:'Costo por unidad en pesos:'
    TextInput:
        id:ti_costo
        multiline:False
        hint_text:'Costo'
    
    LeftLabel:#**********ALMACEN
        text:'Cantidad de productos en almacen:'
    TextInput:
        id:ti_almacen
        multiline:False
        hint_text:'Almacen'
    
    BoxLayout:
        size_hint_y:5
    BoxLayout:
        Button:
            text:'Crear'
            on_press:root.insert_data()
        Button:
            text:'Salir'
            on_press:root.back_to_dbw()

<UpdateDataWid>:
    orientation:'vertical'
    data_id:''
    canvas:
        Color:
            rgb:0.3,0.3,0.9
        Rectangle:
            pos:self.pos
            size:self.size

    LeftLabel:#*********ID
        text:'ID'+root.data_id
    
    
    LeftLabel:#*********NOMBRE
        text:'Nombre:'
    TextInput:
        id:ti_nombre
        multiline:False
        hint_text:'Nombre'
    
    LeftLabel:#**********MARCA
        text:'Marca:'
    TextInput:
        id:ti_marca
        multiline:False
        hint_text:'Marca'
    
    LeftLabel:#**********COSTO
        text:'Costo por unidad en pesos:'
    TextInput:
        id:ti_costo
        multiline:False
        hint_text:'Costo'
    
    LeftLabel:#**********ALMACEN
        text:'Cantidad de productos en almacen:'
    TextInput:
        id:ti_almacen
        multiline:False
        hint_text:'Almacen'
    
    BoxLayout:
        size_hint_y:4
    BoxLayout:
        Button:
            text:'Actualizar'
            on_press:root.update_data()
        Button:
            text:'Eliminar'
            on_press:root.delete_data()
    
    Button:
        text:'Salir'
        on_press:root.back_to_dbw()